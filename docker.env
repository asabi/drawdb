# Docker Environment Configuration for drawDB
# Copy this file to .env to customize your Docker deployment

# Backend Configuration
NODE_ENV=production
PORT=3001
BACKEND_PORT=3001

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_DEV_PORT=5173

# Database Configuration
SQLITE_DB_PATH=/app/data/drawdb.sqlite
CONFIG_DB_PATH=/app/config/config.sqlite

# Volume Mapping Configuration
# Host directories (where data is stored on your machine)
HOST_DATA_DIR=./data/sqlite
HOST_CONFIG_DIR=./data/config
# Container directories (where data is accessed inside containers)
CONTAINER_DATA_DIR=/app/data
CONTAINER_CONFIG_DIR=/app/config

# Security - CHANGE THIS IN PRODUCTION!
ENCRYPTION_KEY=drawdb-default-key-change-in-production

# Rate Limiting Configuration
# Set to false to disable rate limiting entirely (useful for development or trusted environments)
RATE_LIMIT_ENABLED=false
# Time window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per time window
RATE_LIMIT_MAX_REQUESTS=100

# Example configurations:
# For development (no rate limiting): RATE_LIMIT_ENABLED=false
# For high-traffic environments: RATE_LIMIT_MAX_REQUESTS=1000
# For stricter limits: RATE_LIMIT_WINDOW_MS=300000 (5 minutes)

# Optional: CORS Configuration
CORS_ORIGIN=*

# Optional: Database Connection Pool Settings
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
